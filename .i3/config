# reload the configuration file
bindsym $win+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $win+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $win+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $win+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status --config ~/.i3/statusbar.config
        strip_workspace_numbers yes
}

# Pulse Audio controls
#set $sink `pactl list sinks short | grep RUNNING | cut -f1` # take current
set $sink 1

bindsym $win+F5 "exec pactl set-sink-volume $sink 0 && pactl set-sink-mute $sink toggle" # mute sound
bindsym $win+F6 "exec pactl set-sink-mute $sink 0 && pactl set-sink-volume $sink -5%" # decrease sound volume
bindsym $win+F7 "exec pactl set-sink-mute $sink 0 && pactl set-sink-volume $sink +5%" # increase sound volume
bindsym XF86AudioMute "exec pactl set-sink-volume $sink 0 && pactl set-sink-mute $sink toggle" # mute sound
bindsym XF86AudioLowerVolume "exec pactl set-sink-mute $sink 0 && pactl set-sink-volume $sink -5%" # decrease sound volume
bindsym XF86AudioRaiseVolume "exec pactl set-sink-mute $sink 0 && pactl set-sink-volume $sink +5%" # increase sound volume

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen brightness controls

# Directly to /sys/class/backlight; remember chmod go+w to brightness
# file. This is not ideal but necessary due to problems with the
# modesetting driver.
# https://bugs.freedesktop.org/show_bug.cgi?id=96572
set $brightness /sys/class/backlight/intel_backlight/brightness
set $max_brightness 937
# `cat /sys/class/backlight/intel_backlight/max_brightness`

bindsym XF86MonBrightnessUp exec --no-startup-id "tee $brightness <<< $(($(cat $brightness)+$max_brightness/5))"
bindsym XF86MonBrightnessDown exec --no-startup-id "tee $brightness <<< $(($(cat $brightness)-$max_brightness/5))"
bindsym $win+F4 exec --no-startup-id "tee $brightness <<< $max_brightness"
bindsym $win+F3 exec --no-startup-id "tee $brightness <<< $(($max_brightness/2))"
bindsym $win+F2 exec --no-startup-id "tee $brightness <<< 1"
# xbacklight
# bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
# bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
# bindsym $win+F4 exec xbacklight -set 100
# bindsym $win+F3 exec xbacklight -set 50
# bindsym $win+F2 exec xbacklight -set 1
# Redshift
# bindsym $win+F4 exec redshift -g 1.0 -O 6500K -b 1.0
