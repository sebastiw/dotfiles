# Touchpad controls
set $touchpadtoggle `synclient | awk '/TouchpadOff/ { off=int($3) } END { print !off }'`
bindsym XF86TouchpadToggle "exec synclient touchpadoff=$touchpadtoggle" # toggle touchpad
bindsym $win+F8 "exec synclient touchpadoff=$touchpadtoggle" # toggle touchpad

# Take screenshot
bindsym Print "exec scrot 'Screenshot - %Y-%m-%d--%_$wx$h_scrot.png' -e 'mv $f ~/images/'"

# Lock screen
bindsym $ctrl+$alt+l exec i3lock --color 000000

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (S) shutdown
mode "$mode_system" {
     bindsym l exec --no-startup-id ~/.i3/scripts/i3exit lock, mode "default"
     bindsym e exec --no-startup-id ~/.i3/scripts/i3exit logout, mode "default"
     bindsym s exec --no-startup-id ~/.i3/scripts/i3exit suspend, mode "default"
     bindsym h exec --no-startup-id ~/.i3/scripts/i3exit hibernate, mode "default"
     bindsym r exec --no-startup-id ~/.i3/scripts/i3exit reboot, mode "default"
     bindsym Shift+s exec --no-startup-id ~/.i3/scripts/i3exit shutdown, mode "default"

     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $win+Escape mode "$mode_system"

# next/previous workspace
bindsym $alt+Tab focus right
bindsym $alt+Shift+Tab focus left
bindsym $win+Tab workspace next
bindsym $win+Shift+Tab workspace prev

# Rename workspace
bindsym $win+m exec i3-input -F 'rename workspace to "%s"' -P 'New name: '

# Multiple monitors
bindsym $win+Home exec ~/.i3/scripts/xrandr_auto

set $displayMode "Set display mode [w]ork [l]aptop [h]ome"
bindsym $win+x mode $displayMode
mode $displayMode {
    bindsym w exec "\
                ~/.i3/scripts/work-displays.sh"; \
                mode "default"
    bindsym l exec "\
                ~/.i3/scripts/laptop-display.sh"; \
                mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Assume you are on workspace "1: www" and switch to "2: IM" using mod+2 because
# somebody sent you a message. You don’t need to remember where you came from
# now, you can just press $mod+2 again to switch back to "1: www".
workspace_auto_back_and_forth yes

# workspace assignment (use "xprop")
assign [class="^Firefox$"] "1:www"
assign [class="^Evolution$"] "2:social"
assign [class="^Pidgin$"] "2:social"
assign [class="^Emacs"] 3
assign [class="^Gnome-terminal"] 4
assign [title="IRC"] "2:social"
assign [class="potify"] "10:♫"

for_window [class="^Pidgin$"] floating disable
for_window [window_role="buddy_list" title="^Buddy List$"] floating disable
for_window [window_role="multifield"] floating enable
for_window [window_role="conversation"] floating enable

